<h3 class="text-center">Все статьи</h3>
<table class="hover">
    <thead>
        <tr>
            <th>Название</th>
            <th>Содержание</th>
            <th>Дата публикации</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {{#each posts}}
        <tr>
            <td>
                {{title}}
            </td>
            <td>
                {{content}}
            </td>
            <td>
                {{createdAt}}
            </td>
            <td>
                <a href="#">Редактировать</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>